<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <title>{% block title %}Showkees{% endblock %}</title>
        <link rel="apple-touch-icon" href="{{ asset('images/touch-icon.png') }}"/>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}" />
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/jquery/jquery-1.7.2.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/confirmation.js') }}" type="text/javascript"></script>
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            <div id="headerWrapper">
                <header>
                    <a href="{{ path('index') }}"><img src="{{ asset('images/logoShowkees.png') }}" alt="Showkees" id="logo" /></a>
                    <h1>
                        <span>van</span> {% block wall_owner_name %}{% endblock %}
                    </h1>
                    {% if app.user != null %}
                    <div id="userOptions">
                        <a href="{{ path('MooiUserBundle_UserIndex') }}">{{ app.user.getFullName() }}</a>
                        <ul>
                            <li><a href="{{ path('logout') }}">Uitloggen</a></li>
                            <li><a href="{{ path('MooiWallBundle_SubjectIndex') }}">Vakken</a></li>
                            <li><a href="{{ path('MooiUserBundle_UserEdit') }}">Wijzigen</a></li>
                            <li><a href="{{ path('MooiUserBundle_UserCreate') }}">Toevoegen</a></li>
                        </ul>
                    </div>
                    {% endif %}
                </header>
            </div>
            <div id="contentWrapper">
                {% block columns %}
                    
                {% endblock %}
            </div>
            <div id="footerWrapper">
                <footer>
                    <p>Footer placeholder</p>
                </footer>
            </div>
        {% endblock %}
    </body>
</html>
